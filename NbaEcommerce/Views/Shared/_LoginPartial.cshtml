@using Microsoft.AspNetCore.Identity
@using NbaEcommerce.Areas.Identity.Data
@inject SignInManager<NbaEcommerceUser> SignInManager
@inject UserManager<NbaEcommerceUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a asp-area="Identity" asp-page="/Account/Manage/Index" class="nav-link text-dark" title="Manage">Ciao <strong> @UserManager.GetUserName(User) </strong>!</a>
    </li>
    <li class="nav-item">
        <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/Index", new { area = "" })" method="post" id="logoutForm" class="navbar-right">
            <button type="submit" class="btn btn-sm btn-primary rounded-pill text-white mt-1">Esci</button>
        </form>
    </li>
}
else
{
    <li class="nav-item"><a asp-area="Identity" class="nav-link" asp-page="/Account/Login">Accedi</a></li>
}
