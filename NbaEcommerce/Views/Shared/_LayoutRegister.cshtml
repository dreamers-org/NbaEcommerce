<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - NbaEcommerce</title>

    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/dist/main.bundle.js"></script>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.2/css/all.css" integrity="sha384-fnmOCqbTlWIlj8LyTjo7mOUStjsKC4pOpQbqyi7RrhN7udi9RwhKkMHpvLbHG9Sr" crossorigin="anonymous">
</head>
<body class="bg-light">


    <div class="container-fluid mt-3 mb-5">
        <partial name="_CookieConsentPartial" />

        <div class="row justify-content-center mb-5">
            <div class="col col-md-4">
                <div class="text-center ">
                    <a asp-action="Index" asp-controller="Home">

                        <img src="~/images/logo.png" class="img-fluid d-block mx-auto" style="max-height:100px; max-width:100px;" />
                    </a>
                    <br />
                    <span class="text-secondary text-uppercase" style="font-size:20px;font-weight:100">Tech Spare Parts</span>
                </div>
            </div>
        </div>

        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <div class="bg-secondary mt-0 py-3 small footer-secondary" style="margin-top:300px !important;">
        <div class="container">
            <span class="text-white float-left">@@2019 NBA Tech Spare Parts</span>
            <span class="text-white float-right">Informativa privacy | cookies</span>
        </div>
    </div>

    @RenderSection("Scripts", required: false)
</body>
</html>
