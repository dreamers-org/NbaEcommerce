@model NbaEcommerce.Models.Prodotto

@{
    ViewData["Title"] = "Dettaglio prodotto";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row mt-2">
    <div class="col-6">
        <h2>@ViewData["Title"]</h2>
    </div>
</div>

<hr />

<div class="row justify-content-center">
    <div class="col-md-4">
        <div class="card border-left-primary shadow h-100">
            <div class="card-body">
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayNameFor(model => model.Titolo)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Titolo)
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.Descrizione)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Descrizione)
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.IdCategoria)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.IdCategoriaNavigation.Descrizione)
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.IdMarchio)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.IdMarchioNavigation.Descrizione)
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.IdDispositivo)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.IdDispositivoNavigation.Descrizione)
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.PrezzoVendita)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.PrezzoVendita)
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.PrezzoAcquisto)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.PrezzoAcquisto)
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.Attivo)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Attivo)
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.Quantità)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Quantità)
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.Immagine)
                    </dt>
                    <dd>
                        <a href="#" class="text-primary" data-toggle="modal" data-target="#exampleModal">
                            Visualizza immagini
                        </a>
                    </dd>
                </dl>
                <div class="row">
                    <div class="col-8">
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-primary btn-block">Modifica</a>
                    </div>
                    <div class="col-4">
                        <a asp-action="Index" class="btn btn-outline-danger btn-block ">Annulla</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Immagini</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">

                <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                    <div class="carousel-inner">
                        @{
                            foreach (var item in Model.Immagine)
                            {
                                bool attivoSettato = false;
                                var base64 = Convert.ToBase64String(item.Data);
                                var imgSrc = String.Format("data:image/gif;base64,{0}", base64);

                                if (attivoSettato)
                                {
                                    <div class="carousel-item">
                                        <img src="@imgSrc" class="d-block w-100" />
                                    </div>
                                }
                                else
                                {
                                    <div class="carousel-item active">
                                        <img src="@imgSrc" class="d-block w-100" />
                                    </div>
                                    attivoSettato = true;
                                }

                            }
                        }
                    </div>
                    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Chiudi</button>
            </div>
        </div>
    </div>
</div>
