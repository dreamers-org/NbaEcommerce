@model IEnumerable<NbaEcommerce.ViewModels.ViewProdottoViewModel>

@{
    ViewData["Title"] = "Index";
}

<div class="row mt-2">
    <div class="col-6">
        <h3><strong>Catalogo online</strong></h3>
    </div>
</div>

<hr />

<div class="row">
    <div class="col-sm-3">
        <div class="card border-left-primary shadow h-100">
            <div class="card-body">
                <h4 class="mb-3">Filtra per</h4>
                <h6>
                    <small class="text-muted">Categoria</small>
                </h6>
                <hr />
                <form action="/" method="post" class="ml-5  mt-3">
                    <div class="form-group">
                        @foreach (NbaEcommerce.Models.Categoria categoria in ViewBag.categorie)
                        {
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="gridCheck">
                                <label class="form-check-label" for="gridCheck">
                                    @categoria.Descrizione
                                </label>
                            </div>
                        }
                    </div>
                </form>

                <h6><small class="text-muted">Marchio</small></h6>
                <hr />
                <form action="/" method="post" class="ml-5  mt-3">
                    <div class="form-group">
                        @foreach (NbaEcommerce.Models.Marchio marchio in ViewBag.marchi)
                        {
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="gridCheck">
                                <label class="form-check-label" for="gridCheck">
                                    @marchio.Descrizione
                                </label>
                            </div>
                        }
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="col-9">
        @foreach (NbaEcommerce.ViewModels.ViewProdottoViewModel prodotto in Model)
        {
            <div class="col-sm-4 col-md-3">
                <div class="card ml-2">
                    <img src="~/images/repuesto-pantalla-completa-iphone-x-1.jpg" class="card-img-top" />
                    <div class="card-body text-center">
                        <h6 class="card-title">@prodotto.Titolo</h6>
                        <a asp-action="Details" asp-route-id="@prodotto.Id" title="Dettaglio" class="btn btn-sm btn-outline-primary">Maggiori informazioni</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>




