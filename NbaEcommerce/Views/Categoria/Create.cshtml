@model NbaEcommerce.Models.Categoria

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row mt-2">
    <div class="col-6">
        <h2>Nuova categoria</h2>
    </div>
</div>

<hr />

<div class="row justify-content-center">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Descrizione" class="control-label"></label>
                <input asp-for="Descrizione" class="form-control" />
                <span asp-validation-for="Descrizione" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="Attivo" /> @Html.DisplayNameFor(model => model.Attivo)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-6">
                        <input type="submit" value="Aggiungi prodotto" class="btn btn-outline-primary btn-block" />
                    </div>
                    <div class="col-6">
                        <a asp-action="Index" class="btn btn-outline-danger btn-block ">Annulla</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
