@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Hai dimenticato la password?";
    Layout = "_LayoutRegister";
}


<div class="row justify-content-center">
    <div class="col-md-4">


        <h3>
            @ViewData["Title"]

            <br />

            <span class="text-muted h5">Inserisci la tua mail</span>
        </h3>

        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="Input.Email" class="form-control" placeholder="utente@@email.it" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary btn-block">Recupera password</button>
        </form>


        @section Scripts {
            <partial name="_ValidationScriptsPartial" />
        }

    </div>
</div>
